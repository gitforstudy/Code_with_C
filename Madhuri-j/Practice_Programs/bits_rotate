//C program to rotate bits using function pointers

#include <stdio.h>

void to_bin(int num)
{
    int i;
    for(i = 7; i >= 0; i--) {
        printf("%d", num>>i&1);
    }
    printf("\n");
}

void rotate_left(int num, int d)
{
    int num1 = (num >> d) | (num << (8 - d));
}

void rotate_right(int num, int d)
{
    int num2 = (num << d) | (num >> (8 - d));
}

int main(void)
{
    int n, bits, ch;
    int (*fp[2])(int, int) = {rotate_left, rotate_right};
    printf("Enter the number: ");
    scanf("%d", &n);
    printf("Enter the bits position to rotate: ");
    scanf("%d", &bits);
    to_bin(n);
    printf("0.Rotate Left\n1.Rotate Right\n");
    printf("Enter your choice: ");
    scanf("%d", &ch);
    int num1 = (*fp[ch])(n, bits);
    to_bin(num1);
    
    return 0;
}
